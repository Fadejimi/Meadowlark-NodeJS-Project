{{#section 'head'}}
    <script src="//cdnjs.cloudflare.com/ajax/libs/handlebars.js/1.3.0/handebars.min.js"></script>

    <script id="nuseryRhymeTemplate" type="text/x-handlebars-template">
    Mary had a little <b>\{{animal}}</b>, its <b>\{{bodyPart}}</b>
    was <b>\{{adjective}}</b> as <b>/{{noun}}</b>.
{{/section}}

{{#section 'jquery'}}
    <script>
        $(document).ready(function(){
            var nuseryRhymeTemplate = Handlebars.compile(
                $('#nuseryRhymeTemplate').html);
        });
    </script>
{{/section}}

<div id ="nuseryRhyme">Click a button....</div>
<hr>
<button id="btnNuseryRhyme">Generate nusery Rhyme</button>
<button id="btnNuseryRhymeAjax">Generate nusery rhyme from Ajax</button>

{{#section 'jquery'}}
    <script>
        $(document).ready(function(){
            var nuseryRhymeTemplate = Handlebars.compile(
                $('#nuseryRhymeTemplate').html);

            var nuseryRhyme = $('#nuseryRhyme');

            $('#btnNuseryRhyme').on('click', function(evt){
                evt.preventDefault();
                $nuseryRhyme.html(nuseryRhymeTemplate(
                {
                    animal: 'basillik',
                    bodyPart: 'tail',
                    adjective: 'sharp',
                    noun: 'a needle'
                }));
            });

            $('#btnNuseryRhymeAjax').on('click', function(evt){
                evt.preventDefault();
                $.ajax('/data/nusery-rhyme', {
                    success: function(data){
                        $nuseryRhyme.html(nuseryRhymeTemplate(data))
                    }
                });
            });
        });
    </script>
{{/section}}
